{
  "name": "customer-support-system",
  "version": "1.0.0",
  "private": true,
  "prisma": {
    "schema": "../packages/shared/prisma/schema.prisma"
  },
  "scripts": {
    "dev": "tsx server.ts",
    "build": "prisma generate && NODE_OPTIONS='--max-old-space-size=4096' next build",
    "build:skip-typecheck": "prisma generate && NODE_OPTIONS='--max-old-space-size=4096' SKIP_ENV_VALIDATION=true next build",
    "start": "NODE_ENV=production tsx server.ts",
    "start:next": "next start",
    "start:pm2": "pm2 start ../infra/ecosystem.config.js",
    "stop:pm2": "pm2 stop ../infra/ecosystem.config.js",
    "restart:pm2": "pm2 restart ../infra/ecosystem.config.js",
    "delete:pm2": "pm2 delete ../infra/ecosystem.config.js",
    "logs:pm2": "pm2 logs",
    "status:pm2": "pm2 status",
    "monit:pm2": "pm2 monit",
    "lint": "next lint",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:studio": "prisma studio",
    "db:seed": "tsx ../packages/shared/prisma/seed.ts",
    "db:clean": "tsx ../scripts/clean-database.ts",
    "db:delete-tickets": "tsx ../scripts/delete-all-tickets.ts",
    "worker:email": "tsx lib/notifications/workers/email-worker.ts",
    "worker:push": "tsx lib/notifications/workers/push-worker.ts",
    "worker:backup": "tsx lib/backup/backup-worker.ts",
    "backup:run": "tsx ../scripts/run-backup.ts"
  },
